<?xml version="1.0" encoding="UTF-8"?>
<project name="module_crawler" default="compile.module.crawler">
    <dirname property="module.crawler.basedir" file="${ant.file.module_crawler}"/>

    <property name="module.jdk.home.crawler" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.crawler" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.crawler" value="${project.jdk.classpath}"/>

    <property name="compiler.args.crawler" value="${compiler.args}"/>

    <property name="crawler.output.dir" value="${module.crawler.basedir}/target/classes"/>
    <property name="crawler.testoutput.dir" value="${module.crawler.basedir}/target/test-classes"/>

    <path id="crawler.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="crawler.module.production.classpath">
        <path refid="${module.jdk.classpath.crawler}"/>
        <path refid="library.maven:_com.google.code.gson:gson:2.0.classpath"/>
        <path refid="library.maven:_org.apache.commons:commons-lang3:3.1.classpath"/>
        <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.1.classpath"/>
        <path refid="library.gf-client.classpath"/>
    </path>

    <path id="crawler.runtime.production.module.classpath">
        <pathelement location="${crawler.output.dir}"/>
        <path refid="library.maven:_com.google.code.gson:gson:2.0.classpath"/>
        <path refid="library.maven:_org.apache.commons:commons-lang3:3.1.classpath"/>
        <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.1.classpath"/>
        <path refid="library.gf-client.classpath"/>
    </path>

    <path id="crawler.module.classpath">
        <path refid="${module.jdk.classpath.crawler}"/>
        <pathelement location="${crawler.output.dir}"/>
        <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
        <path refid="library.maven:_com.google.code.gson:gson:2.0.classpath"/>
        <path refid="library.maven:_org.apache.commons:commons-lang3:3.1.classpath"/>
        <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.1.classpath"/>
        <path refid="library.gf-client.classpath"/>
    </path>

    <path id="crawler.runtime.module.classpath">
        <pathelement location="${crawler.testoutput.dir}"/>
        <pathelement location="${crawler.output.dir}"/>
        <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
        <path refid="library.maven:_com.google.code.gson:gson:2.0.classpath"/>
        <path refid="library.maven:_org.apache.commons:commons-lang3:3.1.classpath"/>
        <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.1.classpath"/>
        <path refid="library.gf-client.classpath"/>
    </path>


    <patternset id="excluded.from.module.crawler">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.crawler">
        <patternset refid="excluded.from.module.crawler"/>
    </patternset>

    <path id="crawler.module.sourcepath">
        <dirset dir="${module.crawler.basedir}">
            <include name="src/main/java"/>
            <include name="src/main/resources"/>
        </dirset>
    </path>

    <path id="crawler.module.test.sourcepath">
        <dirset dir="${module.crawler.basedir}">
            <include name="src/test/java"/>
        </dirset>
    </path>


    <target name="compile.module.crawler" depends="compile.module.crawler.production,compile.module.crawler.tests"
            description="Compile module crawler"/>

    <target name="compile.module.crawler.production" depends="register.custom.compilers"
            description="Compile module crawler; production classes">
        <mkdir dir="${crawler.output.dir}"/>
        <javac2 destdir="${crawler.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.crawler}/javac">
            <compilerarg line="${compiler.args.crawler}"/>
            <bootclasspath refid="crawler.module.bootclasspath"/>
            <classpath refid="crawler.module.production.classpath"/>
            <src refid="crawler.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.crawler"/>
        </javac2>

        <copy todir="${crawler.output.dir}">
            <fileset dir="${module.crawler.basedir}/src/main/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.crawler.basedir}/src/main/resources">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.crawler.tests" depends="register.custom.compilers,compile.module.crawler.production"
            description="compile module crawler; test classes" unless="skip.tests">
        <mkdir dir="${crawler.testoutput.dir}"/>
        <javac2 destdir="${crawler.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.crawler}/javac">
            <compilerarg line="${compiler.args.crawler}"/>
            <bootclasspath refid="crawler.module.bootclasspath"/>
            <classpath refid="crawler.module.classpath"/>
            <src refid="crawler.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.crawler"/>
        </javac2>

        <copy todir="${crawler.testoutput.dir}">
            <fileset dir="${module.crawler.basedir}/src/test/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.crawler" description="cleanup module">
        <delete dir="${crawler.output.dir}"/>
        <delete dir="${crawler.testoutput.dir}"/>
    </target>
</project>